BoxLayout:
    orientation:'vertical'

    ActionBar:               #definimos a ActionBAr
        id: actBar
        pos_hint: {'top':1}  #na parte superior da tela
        background_normal: '' #alteramos as cores
        background_down: ''
        background_color: 0, 1, 0, 1        

        ActionView:         
            use_separator: True #A actionview terá uma separação entre os objetos
             
            ActionPrevious:
                title: 'Criação de array' # Texto identificador do menu
                with_previous: False
                 
            ActionOverflow:
             
                     
            ActionGroup:
                text: 'Arquivo' #criamos um grupo de botões debaixo do botão "Arquivo"
                ActionButton:
                    text: 'Abrir'            # é sempre o nome do botão _ ação a ser executada
                    on_press:  root.abrir() # chamamos a função abrir()
                     
                ActionButton:
                    text: 'Salvar'
                    on_press: print('Pressionado Salvar')
                     
                             
                ActionButton:
                    text: 'Sair'
                    on_press: print('Pressionado Sair')
                     
                     
                         
            ActionGroup:
                text: 'Ajuda'
                 
                ActionButton:
                    text: 'Sobre'
                ActionButton:
                    text: 'Ajuda' 